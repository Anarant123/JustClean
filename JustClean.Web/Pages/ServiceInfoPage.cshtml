@page
@model JustClean.Web.Pages.ServiceInfoPageModel

@{
    ViewData["Title"] = "Услуга: " ;
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="card" style="width: 18rem;">
        <img src="data:image/png;base64,@Convert.ToBase64String(Model.ServiceInfo.Image)" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">@Model.ServiceInfo.Name</h5>
            <p class="card-text">Цена: @Model.ServiceInfo.Price</p>
            <p class="card-text">@Model.ServiceInfo.Description</p>
            <form method="post">
                <input type="hidden" name="serviceId" value="@Model.ServiceInfo.Id" />
                <button type="submit" class="btn btn-primary">Заказать</button>
            </form>
        </div>
    </div>
</div>