@page
@model JustClean.Web.Pages.ServicesPageModel
@{
    ViewData["Title"] = "Список услуг";
}

<div class="container mt-2">
    <div class="row">
        @if (!Model.Services.Any())
        {
            <h1 class="text-center">Услуг нет</h1>
        }
        else
        {
            <h1 class="text-center">Услуги</h1>
        }
        @foreach (var service in Model.Services)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <form method="post">
                        <input type="hidden" name="serviceId" value="@service.Id" />
                        @if (service.Image == null)
                        {
                            <img src="~/images/null_image.jpg" style="max-width: 600px; max-height: 400px;">
                        }
                        else
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(service.Image)" class="card-img-top img-fluid" style="max-width: 600px; max-height: 400px;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@service.Name</h5>
                            <p class="card-text">Цена: @service.Price</p>
                            <button type="submit" class="btn btn-primary" style="font-size: 20px; width:200px">Подробнее</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>