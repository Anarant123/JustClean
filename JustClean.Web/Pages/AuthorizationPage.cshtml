@page
@model JustClean.Web.Pages.AuthorizationPageModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container col-md-6 mx-auto">
    <div class="row justify-content-center">
        <form method="post">
            <h1>@ViewData["Title"]</h1>
            <div class="form-group my-3">
                <input asp-for="AuthModel.Login" class="form-control" placeholder="Логин" />
                <span asp-validation-for="AuthModel.Login" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input asp-for="AuthModel.Password" type="password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="AuthModel.Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-error text-danger"></div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark text-light bg-dark col mx-1">Войти</button>
                    <a asp-page="/RegistrationPage" class="btn btn-dark text-light bg-dark col mx-1">Зарегистрироваться</a>
                </div>
            </div>
        </form>
    </div>
</div>